<div class="page">
  <h2 class="page-title manrope">Dashboard</h2>

  <div class="posts">
    <div id="add-section-outer">
      <section class="light-background hanken" id="add-section">
        <p><i class="fa-solid fa-plus"></i> New post</p>
      </section>

      <section class="hidden" id="new=post">
        
      </section>
    </div>

    <section class="hanken posts">
      {{#each posts as |post|}}
      {{> post-details post=post}}
      {{/each}}
    </section>
  </div>
</div>